#ifndef vngfx_vnTextureManager_h
#define vngfx_vnTextureManager_h

#include "vnTexture.h"
#include "vnSingleton.h"
#include "vnFilePath.h"

#include <map>

_vn_begin

class FileStream;

class _vn_gfx_api TextureManager : public Singleton<TextureManager> {
public:
    
    class Delegate {
    public:
        virtual bool loadTexture(FileStream &fs, TexturePtr &texture) = 0;
    };
    
    TextureManager();
    
    const TexturePtr & loadTexture(u32 fsId, const c8 *fileName);
    const TexturePtr & loadTexture(const FilePath &path);
    void freeTexture(u32 fsId, const c8 *fileName);
    void freeTexture(const FilePath &path);
    void freeAllTextures();
    void freeUnusedTextures();
    
    void setDelegate(Delegate *delegate);
    
private:
    typedef std::map<FilePath, TexturePtr> TextureMap;
    TextureMap m_textures;
    
    Delegate *m_delegate;
    
    //static bool _loadTexture(FileStream &fs, TexturePtr &texture);
    
};

_vn_end

#endif
